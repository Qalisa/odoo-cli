{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "target": "ESNext",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "lib": ["ESNext", "DOM"],
      "types": ["node"],
      "skipLibCheck": true
    },
    "include": ["src"]
  }